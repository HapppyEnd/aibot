# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@postgres:5432/aibot

# Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Telegram API (получить на https://my.telegram.org)
TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here
TELEGRAM_CHANNEL_USERNAME=your_channel_username

# App settings
DEBUG=False
LOG_LEVEL=INFO

# SberGigaChat credentials (вариант 1: отдельные client_id и client_secret)
# GIGACHAT_CLIENT_ID=your_client_id
# GIGACHAT_CLIENT_SECRET=your_client_secret

# SberGigaChat credentials (вариант 2: готовый base64 ключ)
# GIGACHAT_API_KEY=your_api_key_here